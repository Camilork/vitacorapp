div(class="card-img-top") 
    form(#personaform="ngForm",appnoautocomplete="", autocomplete="off",  (keydown.enter)="$event.preventDefault()")
        input( 
            type="hidden", 
            name="_id", 
            class="form-control", 
            id="_id",
            #_id="ngModel", 
            [(ngModel)]="personService.selectperson._id"
        )
        div(class="form-group")
            label(id='title') {{title}}
                div(class="form-group")
                    div
                        input( 
                            type="text",
                            name="username", 
                            id="username",
                            #username="ngModel", 
                            [(ngModel)]="personService.selectperson.username", 
                            placeholder="Username"
                        )
                        input(
                            type="email", 
                            id="email", 
                            name="email", 
                            #email="ngModel", 
                            [(ngModel)]="personService.selectperson.email",  
                            placeholder="Email"
                        )
                    div    
                        input( 
                            type="text", 
                            id="first_name", 
                            name="first_name", 
                            #first_name="ngModel", 
                            [(ngModel)]="personService.selectperson.first_name", 
                            placeholder="First name"
                        )   
                        input(
                            type="text", 
                            id="second_name", 
                            name="second_name", 
                            #second_name="ngModel", 
                            [(ngModel)]="personService.selectperson.second_name",  
                            placeholder="Second name"
                        )
                    div
                        input(
                            type="text", 
                            id="first_lastname", 
                            name="first_lastname", 
                            #first_lastname="ngModel", 
                            [(ngModel)]="personService.selectperson.first_lastname",  
                            placeholder="First lastname"
                        )
                        input(
                            type="text", 
                            id="second_lastname", 
                            name="second_lastname", 
                            #second_lastname="ngModel", 
                            [(ngModel)]="personService.selectperson.second_lastname",  
                            placeholder="Second lastname"
                        )  
                    div(*ngIf="passwordInputVisible")
                        input(
                            type="password", 
                            id="password", 
                            name="password", 
                            #password="ngModel", 
                            [(ngModel)]="personService.selectperson.password",  
                            placeholder="Password"
                        )
                        input(
                            type="password", 
                            id="repassword", 
                            name="repassword",   
                            placeholder="Repit the password"
                        )
                    div
                        input(
                            type="text", 
                            id="country", 
                            name="country", 
                            #country="ngModel", 
                            [(ngModel)]="personService.selectperson.country",  
                            placeholder="Country"
                        )  
                        input(
                            type="number", 
                            id="celphone", 
                            name="celphone", 
                            #celphone="ngModel", 
                            [(ngModel)]="personService.selectperson.celphone",  
                            placeholder="Celphone"
                        )
                    div
                        input(
                            type="number", 
                            id="Rate_by_hour", 
                            name="Rate_by_hour", 
                            #Rate_by_hour="ngModel", 
                            [(ngModel)]="personService.selectperson.Rate_by_hour",  
                            placeholder="Rate by hour"
                        )    
                        input(
                            type="number", 
                            id="Rate_by_mount", 
                            name="Rate_by_mount", 
                            #Rate_by_mount="ngModel", 
                            [(ngModel)]="personService.selectperson.Rate_by_mount",  
                            placeholder="Rate by mount"
                        )
                    div
                        input(
                            type="number", 
                            id="idRol", 
                            name="idRol", 
                            #idRol="ngModel", 
                            [(ngModel)]="personService.selectperson.idRol",  
                            placeholder="idRol"
                        )
                        input(
                            type="text", 
                            id="github", 
                            name="github", 
                            #github="ngModel", 
                            [(ngModel)]="personService.selectperson.github",  
                            placeholder="Github"
                        )
                    div
                        input(
                            type="text", 
                            id="bitbucket", 
                            name="bitbucket", 
                            #bitbucket="ngModel", 
                            [(ngModel)]="personService.selectperson.bitbucket",  
                            placeholder="Bitbucket"
                        )     
                        input(
                            type="text", 
                            id="linkedin", 
                            name="linkedin", 
                            #linkedin="ngModel", 
                            [(ngModel)]="personService.selectperson.linkedin",  
                            placeholder="Linkedin"
                        )
                           
                div(class="form-group")
                    div(id="btndiv")
                        button(
                            *ngIf="singup",
                            class="btn btn-outline-light btn-lg", 
                            "(click)"="returnpage()") Return
                        button(
                            class="btn btn-outline-light btn-lg", 
                            "(click)"="resetForm(personaform)") Clean   
                        button(class="btn btn-outline-light btn-lg",
                            "(click)"="addperson(personaform)") Save 